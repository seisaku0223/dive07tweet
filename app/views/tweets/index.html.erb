<div class="container">
  <div class="row">
    <div class="col-md-4 show-left">
      <h1>DIVE07課題</h1>
      <p>
        投稿一覧
      </p>
    </div>
    <div class="col-md-8 show-right">
      <%= link_to "つぶやきを投稿する", new_tweet_path, class: 'btn btn-default' %>
      <% @tweets.each do |tweet| %>
      <div class="right-word">
        <p><%= tweet.content %></p>
        <%= link_to "編集", edit_tweet_path(tweet.id), class: 'btn btn-default btn-sm btn-success' %>
        <%= link_to "削除", tweet_path(tweet.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
